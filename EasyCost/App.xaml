<Application
    x:Class="EasyCost.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EasyCost"
    RequestedTheme="Light">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Assets/ResourceDirectory/Brush.xaml"/>
                <ResourceDictionary Source="Assets/ResourceDirectory/Button.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <FontFamily x:Key="BMJuaFont">ms-appx:/Assets/Fonts/BMJUA_ttf.ttf#BM JUA_TTF</FontFamily>
            <FontFamily x:Key="BMDohyeonFont">ms-appx:/Assets/Fonts/BMDOHYEON_ttf.ttf#배달의민족 도현</FontFamily>
            <Thickness x:Key="ContentDialogBorderWidth">0</Thickness>
        </ResourceDictionary>
    </Application.Resources>
</Application>
