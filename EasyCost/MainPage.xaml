    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="20" />
            <RowDefinition Height="*" />
            <RowDefinition Height="60" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Background="Olive" Orientation="Horizontal">
            <TextBlock Text="쉽게 쓰는 지출 통장" Foreground="White" VerticalAlignment="Center" FontWeight="Bold" Margin="20,0,0,0" FontSize="20"/>
        </StackPanel>
